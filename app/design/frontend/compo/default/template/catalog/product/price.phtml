 $catalogMode = $catalogModeWrapper['value']['sv2']['value'];
 if($catalogMode == 0){
	if(Mage::app()->getLayout()->checkVersion('1.7.x.x')) {
		echo $this->getLayout()->createBlock('core/template')->setTemplate('1.7.x.x/catalog/product/subprice.phtml')->setThisBlock($this)->toHtml();
	} elseif(Mage::app()->getLayout()->checkVersion('1.8.0.x')) {
		echo $this->getLayout()->createBlock('core/template')->setTemplate('1.8.0.x/catalog/product/subprice.phtml')->setThisBlock($this)->toHtml();
	} else {
		echo $this->getLayout()->createBlock('core/template')->setTemplate('catalog/product/subprice.phtml')->setThisBlock($this)->toHtml();

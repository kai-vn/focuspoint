<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
$catalogModeWrapper = $this->getLayout()->getMConfigResultByAlias('catalog_mode');
$catalogMode = $catalogModeWrapper['value']['sv2']['value'];
?>
<?php if($this->getItemCount()): ?>
<div class="crosssell cart-block">
	<div class="cart-block-title">
		<h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
	</div>
    <ul id="crosssell-products-list" class="clearfix">
    <?php foreach ($this->getItems() as $_item): ?>
        <li class="item clearfix">
            <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>">
				<?php
					$escaped_label = $this->escapeHtml($_item->getName());
					echo '<img '. $_item->getProductMediaResized(86, 'thumbnail', 'with-mobile', 385)
						->addImageHtmlAttributte('alt', $escaped_label)
						->addImageHtmlAttributte('width', 86)
						->addImageHtmlAttributte('title', $escaped_label)
						->getImageHtmlAttributte().' />';
				?>
			</a>
            <div class="product-details">
                <h5 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h5>
                <?php echo $this->getPriceHtml($_item, true, false) ?>
				<?php if($catalogMode == 0){ ?>
					<button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Cart')); ?>" class="btn btn-default" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><i class="meigee-fa-shopping-cart"></i></span></span></button>
				<?php } ?>
                <ul class="add-to-links">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <li><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><i class="meigee-fa-heart"></i></a></li>
                    <?php endif; ?>
                    <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                        <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><i class="meigee-fa-exchange"></i></a></li>
                    <?php endif; ?>
                </ul>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>

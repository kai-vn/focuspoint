					<div class="quantity-decrease btn-qty" onclick="qtyDown()"><i class="meigee-arrow-left"></i></div>
					<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')); ?>" class="input-text qty form-control" />
